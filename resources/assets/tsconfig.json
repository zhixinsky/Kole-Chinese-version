{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2021",
    "lib": ["es2021", "dom", "dom.iterable"],
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@/*": ["js/*"]
    }
  },
  "include": [
    "js/**/*",
    "../../node_modules/vitest/globals.d.ts"
  ],
  "exclude": [
    "js/__tests__/**/*"
  ]
}
